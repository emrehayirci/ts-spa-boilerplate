{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "newLine": "LF",
        "rootDirs": [
            "src/scripts/",
            "test/"
        ],
        "outDir": "dist/scripts/"
    },
    "filesGlob": [
        "src/scripts/**/*.ts",
        "src/scripts/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/scripts.typings/main",
        "src/scripts.typings/main.d.ts"
    ]
}
